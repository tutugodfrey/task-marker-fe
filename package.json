{
  "name": "todo-er",
  "version": "1.0.0",
  "description": "A simple todo demo for data-modela npm package",
  "main": "index.js",
  "jest": {
    "automack": false,
    "setupFiles": [
      "./setup/setupEnzyme.js"
    ]
  },
  "scripts": {
    "webpack": "webpack",
    "test": "NODE_ENV=test npm run test:server && npm run test:client",
    "test:client": "jest ./client/tests/__tests__",
    "test:server": "NODE_ENV=test mocha -r esm src/test",
    "e2e": "npm start & mocha -r esm client/tests/e2e/tests; kill $(lsof -ti :3005)",
    "e2e2": "npm start & mocha -r esm client/tests/e2e/tests && pkill node",
    "build-and-test-e2e": "npm run build; npm start & mocha -r esm client/tests/e2e/tests; kill $(lsof -ti :3005)",
    "build": "npm run webpack -- --mode production",
    "coverage": "nyc npm run test && nyc report --reporter=lcov",
    "start:client": "webpack-dev-server --mode development --hot --open",
    "storybook": "start-storybook"
  },
  "keywords": [
    "Node",
    "task-marker-fe",
    "JavaScript",
    "dummydata"
  ],
  "author": "Tutu Godfrey",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "chromedriver": "80.0.1",
    "dotenv-safe": "^6.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "esm": "^3.2.22",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.8.0",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.4",
    "prop-types": "^15.7.2",
    "selenium-webdriver": "^4.0.0-alpha.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/react": "^5.3.17",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest-fetch-mock": "^2.1.2",
    "node-sass": "^4.12.0",
    "nyc": "^14.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "recompose": "^0.30.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  }
}
